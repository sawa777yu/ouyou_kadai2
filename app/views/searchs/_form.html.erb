<div class="container">
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <% if user_signed_in? %>
        <%= form_with url:search_path,method: :get, local: true do |f| %>
          <%= f.text_field :content %>
          <%= f.select :model, options_for_select([["User","user"], ["Book","book"]]) %>
          <%= f.select :method, options_for_select([["完全一致","perfect"], ["部分一致","partial"], ["前方一致","forward"], ["後方一致","backward"]]) %>
          <%= f.submit "検索" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

